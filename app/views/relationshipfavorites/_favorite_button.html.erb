<% if current_user.favoriting?(micropost) %>
  <%= form_for(current_user.relationshipfavorites.find_by(micropost_id: micropost.id), html: { method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.relationshipfavorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'favofrite', class: 'btn btn-success btn-xs' %>
  <% end %>
<% end %>